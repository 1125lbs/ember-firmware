[Unit]
Description=Enlarge root filesystem partition to maximum capacity on first boot
ConditionPathExists=!/var/local/resize-rootfs-done
After=remount-rootfs.service

[Service]
Type=oneshot
RemainAfterExit=true
ExecStartPost=/usr/bin/touch /var/local/resize-rootfs-done
ExecStop=/bin/true
ExecStart=/sbin/resize2fs /dev/mmcblk0p2

[Install]
WantedBy=multi-user.target
