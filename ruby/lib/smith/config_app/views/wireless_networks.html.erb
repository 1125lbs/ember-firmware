<% if @wireless_networks.empty? %>
  <div class="center-block alert alert-warning">No wireless networks in range</div>
<% end %>
  
<div class="content">

  <% if @last_wireless_network %>
    <p class="lead">Last selected wireless network:</p>
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Mode</th>
        <th>Security</th>
        <th></th>
      </tr>
      <%= partial 'wireless_network', locals: { wireless_network: @last_wireless_network } %>
    </table>
  <% end %>

  <% unless @wireless_networks.empty? %>
    <div class="clearfix">
      <p class="lead pull-left">Available wireless networks:</p>
      <button onClick="document.location.reload(true)" class="btn btn-primary pull-right">Refresh</button>
    </div>
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Mode</th>
        <th>Security</th>
        <th></th>
      </tr>
      <%= partial 'wireless_network', collection: @wireless_networks  %>
    </table>
  <% end %>

</div>
